FROM docker.io/rust:1.93-bullseye AS builder
RUN rustup target add x86_64-unknown-linux-musl
RUN mkdir /build
COPY . /build/
WORKDIR /build
RUN cargo build --release --target x86_64-unknown-linux-musl

FROM docker.io/alpine:3.23.3
COPY --from=builder /build/target/x86_64-unknown-linux-musl/release/mandelbrot /
ENTRYPOINT ["/mandelbrot"]